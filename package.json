{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=webapp-production --r2=webapp-audio --local --ip 0.0.0.0 --port 3000",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/static/styles.css --minify",
    "build": "npm run build:css && vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:reset:local": "./scripts/dev-db-reset.sh",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production --remote",
    "db:console:local": "wrangler d1 execute webapp-production --local",
    "db:console:prod": "wrangler d1 execute webapp-production --remote",
    "db:verify": "wrangler d1 execute webapp-production --local --command=\"SELECT name FROM sqlite_master WHERE type='table' ORDER BY name\"",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "check:schema": "node scripts/check-schema.mjs"
  },
  "dependencies": {
    "hono": "^4.11.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "autoprefixer": "^10.4.22",
    "better-sqlite3": "^12.6.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
